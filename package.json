{
  "name": "swapcard6",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "init": "pnpm install && pnpm exec playwright install chromium && cp .env.example .env.local && convex login && convex dev --once || true && claude ${RUNNING_IN_CONTAINER:+--dangerously-skip-permissions} '/init-app'",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "dev:backend:noninteractive": "./start-local-convex.mjs",
    "setup:preview": "./setup-preview.sh",
    "deploy:preview": "convex deploy --preview-name \"${PREVIEW_NAME:-preview-$(git branch --show-current | sed 's/[^a-z0-9-]/-/g')}\"",
    "deploy:backend": "convex deploy -y",
    "deploy:frontend": "pnpm build && netlify deploy --prod --dir=dist",
    "deploy": "pnpm deploy:backend && pnpm deploy:frontend",
    "build": "tsc -b && vite build",
    "lint": "tsc -b && eslint .  --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "seed": "pnpx convex run seed:seedNow",
    "seed:prod": "pnpx convex run seed:seedNow --prod"
  },
